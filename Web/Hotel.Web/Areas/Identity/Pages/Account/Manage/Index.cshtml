@page
@using Hotel.Web.Areas.Identity.Pages.Account.Manage
@model Hotel.Web.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>Profile</h4>
<partial name="_StatusMessages" model="Model.StatusMessage" />
<div class="row">
    <div class="col-lg-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Username">Email address</label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group row">
                <label asp-for="Input.PhoneNumber">Phone number</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-outline-dark">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}