@page
@using Hotel.Web.Areas.Identity.Pages.Account.Manage
@model Hotel.Web.Areas.Identity.Pages.Account.Manage.EnableAuthenticatorModel
@{
    ViewData["Title"] = "Configure authenticator app";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessages" for="StatusMessage" />
<h4>
    Configure the application for authentication
</h4>
<div>
    <p>In order to use the application you need to follow these steps:</p>
    <ol class="list">
        <li>
            <p>

                
                Download an application like Microsoft Authenticator за
                <a href="https://go.microsoft.com/fwlink/?Linkid=825071">Windows Phone</a>,
                <a href="https://go.microsoft.com/fwlink/?Linkid=825072">Android</a> or
                <a href="https://go.microsoft.com/fwlink/?Linkid=825073">iOS</a> or
                Google Authenticator for
                <a href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2&amp;hl=en">Android</a> or
                <a href="https://itunes.apple.com/us/app/google-authenticator/id388497605?mt=8">iOS</a>.
            </p>
        </li>
        <li>
            <p>
                Scan your QR code or enter that key <kbd>@Model.SharedKey</kbd>
                In your application for double authentication. White spaces are not considered.
            </p>
            <div class="alert alert-info">
               Learn how to <a href="https://go.microsoft.com/fwlink/?Linkid=852423">activate the generation of QR code</a>.
            </div>
            <div id="qrCode"></div>
            <div id="qrCodeData" data-url="@Html.Raw(@Model.AuthenticatorUri)"></div>
        </li>
        <li>
            <p>
                After you had scanned the QR or you had entered the key, your application will give you an unique code for access
                Enter that code in the field underneath.
            </p>
            <div class="row">
                <div class="col-md-6">
                    <form id="send-code" method="post">
                        <div class="form-group">
                            <label asp-for="Input.Code" class="control-label">
                                Access code
                            </label>
                            <input asp-for="Input.Code" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Input.Code" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </form>
                </div>
            </div>
        </li>
    </ol>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
