@page
@using Hotel.Web.Areas.Identity.Pages.Account.Manage
@model ChangePasswordModel
@{ ViewData["Title"] = "Change password";
                ViewData["ActivePage"] = ManageNavPages.ChangePassword; }

<h4>Смяна на парола</h4>
<partial name="_StatusMessages" for="StatusMessage" />
<div class="row">
    <div class="col-lg-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Input.OldPassword">Текуща парола</label>
                <input asp-for="Input.OldPassword" class="form-control" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.NewPassword">Нова парола</label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.ConfirmPassword">Потвърди новата парола</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-dark">Потвърди</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}