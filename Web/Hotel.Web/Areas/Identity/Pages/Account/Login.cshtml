@page
@model Hotel.Web.Areas.Identity.Pages.Account.LoginModel


@{ ViewData["Title"] = "Sing in"; }

<div id="userAccountView" class="row">
    <div class="col-lg-12">
        <h1>@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
                <h4>Use your account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <button id="userAccountViewButton" type="submit" class="btn btn-outline-dark">Sing in</button>
                <div class="form-group">
                    <p>
                        <a class="text-black-50" id="forgot-password" asp-page="./ForgotPassword">Lost password?</a>
                    </p>

                </div>

                <div class="form-group">
                    <p>
                        <a class="text-black-50" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register new account!</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
