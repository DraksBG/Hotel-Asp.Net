@using Microsoft.AspNetCore.Identity
@using Hotel.Data.Models

@{
    ViewData["Title"] = "Restaurant Reservations";
}
@inject SignInManager<ApplicationUser> SignInManager
@model Hotel.Web.ViewModels.InputModels.Restaurant.RestaurantInputModel

<section id="conferenceHallReserveForm">
    <div class="container">
        <div id="reserveHeader" class="d-flex justify-content-center">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Reserve an event</h2>

                </div>
            </div>
        </div>
        <div class="row">
            <div id="confHallReserveSlider" class="col-lg-7">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="" />
                        </div>
                        <div class="carousel-item">
                            <img src="" />
                        </div>
                        <div class="carousel-item">
                            <img src="" />
                        </div>
                        <div class="carousel-item">
                            <img src="" />
                        </div>
                        <div class="carousel-item">
                            <img src="" />
                        </div>
                        <div class="carousel-item">
                            <img src="" />
                        </div>
                        <div class="carousel-item">
                            <img src="" />
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

            <div class="col-lg-5">
                <form asp-controller="Restaurant" asp-action="Reserve">
                    <div class="form-group">
                        <i class="fa fa-envelope icon"></i>
                        <input class="form-control" asp-for="EmailAddress" value="@User.Identity.Name" placeholder="E-mail">
                    </div>
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    <div class="form-group">
                        <i class="fa fa-phone icon"></i>
                        <input class="form-control" asp-for="PhoneNumber" placeholder="Phone number">
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    <div class="form-group">
                        <i class="fa fa-glass icon"></i>
                        <select class="form-control" asp-for="EventType">
                            <option value="1">Dinner</option>
                            <option value="2">Wedding</option>
                            <option value="3">Prom</option>
                            <option value="4">Birthday</option>
                            <option value="5">Childrens birthday party</option>
                        </select>
                    </div>
                    <span asp-validation-for="EventType" class="text-danger"></span>
                    <div class="form-group">
                        <i class="fa fa-group icon"></i>
                        <input class="form-control" asp-for="NumberOfGuests" placeholder="Number of guests">
                    </div>
                    <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
                    <div class="form-group">
                        <i class="fa fa-calendar icon"></i>
                        <input type="date" class="form-control" asp-for="EventDate" placeholder="Date of the event:">
                    </div>
                    <span asp-validation-for="EventDate" class="text-danger"></span>
                    <div class="form-group">
                        <i class="fa fa-clock-o icon"></i>
                        <input type="time" class="form-control" asp-for="CheckIn" placeholder="Starting hour:">
                    </div>
                    <span asp-validation-for="CheckIn" class="text-danger"></span>
                    <div class="form-group">
                        <i class="fa fa-clock-o icon"></i>
                        <input type="time" class="form-control" asp-for="CheckOut" placeholder="Ending hour:">
                    </div>
                    <span asp-validation-for="CheckOut" class="text-danger"></span>
                    <div class="form-group">
                        <i class="fa fa-commenting icon"></i>
                        <textarea class="form-control" asp-for="Message" rows="3" placeholder="Your message."></textarea>
                    </div>
                    <span asp-validation-for="Message" class="text-danger"></span>

                    <input type="submit" value="Reserve" class="btn btn-outline-dark" asp-area="" asp-controller="Restaurant" asp-action="Reserve">

                </form>
            </div>
        </div>
    </div>
</section>
