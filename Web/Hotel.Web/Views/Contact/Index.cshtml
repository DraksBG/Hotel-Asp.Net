@using Microsoft.AspNetCore.Identity
@using Hotel.Data.Models
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    ViewData["Title"] = "Contact";
}
@model Hotel.Web.ViewModels.InputModels.Contact.ContactFormModel
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div id="contacts" class="container">
    <div class="row">
        <div class="col-lg-5">
            <i class="fa fa-home"></i>
            <a>Thornton, Tas-Sliema SLM3143</a>
        </div>

        <div class="col-lg-4">
            <i class="fa fa-envelope"></i>
            <a>Hotel@mail.com</a>

        </div>

        <div class="col-lg-3">
            <i class="fa fa-phone"></i>
            <a>+354-873-73-94</a>
        </div>
    </div>
</div>

<section id="contactsForm">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <form method="post">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="form-group">
                            <input asp-for="FirstName" class="form-control" placeholder="First name">
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>

                        <div class="form-group">
                            <input asp-for="LastName" class="form-control" placeholder="Surename">
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>

                        <div class="form-group">
                            <input asp-for="Email" value="@User.Identity.Name" class="form-control" placeholder="E-mail">
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <div class="form-group">
                            <input asp-for="Title" class="form-control" placeholder="Title">
                        </div>
                        <span asp-validation-for="Title" class="text-danger"></span>

                        <fieldset class="form-group">
                            <textarea asp-for="Content" class="form-control" placeholder="Your message."></textarea>
                        </fieldset>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    }
                    else
                    {
                        <div class="form-group">
                            <input asp-for="FirstName" value="" class="form-control" placeholder="First name">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="LastName" class="form-control" placeholder="Surename">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" class="form-control" placeholder="E-mail">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Title" class="form-control" placeholder="Title">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <fieldset class="form-group">
                            <textarea asp-for="Content" class="form-control" placeholder="Your message."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </fieldset>
                    }

                    <button id="sendEmailBtn" type="submit" class="btn btn-outline-dark">Submit your message</button>
                </form>

            </div>

            <div class="col-md-7">
                <iframe width="600" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJxUeGHShFDhMROUK-NmHYgvU&key=AIzaSyDq8RC9LvpBCiXlHX4CXpvPmJlGcDVMdiY" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</section>


