@using Microsoft.AspNetCore.Identity
@using Hotel.Data.Models
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    ViewData["Title"] = "Contact";
}
@model Hotel.Web.ViewModels.InputModels.Contact.ContactFormModel
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div id="contacts" class="container">
    <div class="row">
        <div class="col-lg-5">
            <i class="fa fa-home"></i>
            <a>Thornton, Tas-Sliema SLM3143</a>
        </div>

        <div class="col-lg-4">
            <i class="fa fa-envelope"></i>
            <a>Hotel@mail.com</a>

        </div>

        <div class="col-lg-3">
            <i class="fa fa-phone"></i>
            <a>+354-873-73-94</a>
        </div>
    </div>
</div>

<section id="contactsForm">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <form method="post">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="form-group">
                            <input asp-for="FirstName" class="form-control" placeholder="First name">
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>

                        <div class="form-group">
                            <input asp-for="LastName" class="form-control" placeholder="Surename">
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>

                        <div class="form-group">
                            <input asp-for="Email" value="@User.Identity.Name" class="form-control" placeholder="E-mail">
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <div class="form-group">
                            <input asp-for="Title" class="form-control" placeholder="Title">
                        </div>
                        <span asp-validation-for="Title" class="text-danger"></span>

                        <fieldset class="form-group">
                            <textarea asp-for="Content" class="form-control" placeholder="Your message."></textarea>
                        </fieldset>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    }
                    else
                    {
                        <div class="form-group">
                            <input asp-for="FirstName" value="" class="form-control" placeholder="First name">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="LastName" class="form-control" placeholder="Surename">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" class="form-control" placeholder="E-mail">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Title" class="form-control" placeholder="Title">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <fieldset class="form-group">
                            <textarea asp-for="Content" class="form-control" placeholder="Your message."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </fieldset>
                    }

                    <button id="sendEmailBtn" type="submit" class="btn btn-outline-dark">Submit your message</button>
                </form>

            </div>

            <div class="col-md-7">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12926.076912581448!2d14.492323685978533!3d35.90978886464545!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x3188dd324b748397!2s1926%20Hotel%20%26%20Spa!5e0!3m2!1sen!2sbg!4v1609096823901!5m2!1sen!2sbg" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>
        </div>
    </div>
</section>


