@using Hotel.Common
@{
    ViewData["Title"] = "Room details";
}

@model Hotel.Web.ViewModels.RoomViewModels.RoomDetailsViewModel

<div id="singleRoomView" class="container">
    <div class="row">
        <div id="spaImgSlider" class="col-lg-7">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @{
                        var counter = 1;
                        foreach (var picture in Model.Pictures)
                        {
                            if (counter == 1)
                            {
                                <div class="carousel-item active">
                                    <img src=@picture />
                                </div>
                                counter++;
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img src=@picture />
                                </div>
                            }

                        }
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="col-lg-5">
            @if (Model.RoomType == "SingleRoom")
            {
                <h2>Single room</h2>
            }
            @if (Model.RoomType == "DoubleRoom")
            {
                <h2>Double room</h2>
            }
            @if (Model.RoomType == "Apartment")
            {
                <h2>Apartment</h2>
            }
        <ul style="list-style: none;">
        
            <li><a><i class="fa fa-bed "></i>  @Model.NumberOfBeds beds</a></li>
            @if (Model.HasBathroom == true)
            {
                <li><a><i class="fa fa-bathtub"></i>  Bathroom</a></li>
            }
            @if (Model.HasRoomService == true)
            {
                <li><a><i class="fa fa-bell"></i>  Room service 24/7</a></li>
            }
            @if (Model.HasSeaView == true)
            {
                <li><a><i class="fa fa-binoculars"></i>  Sea view</a></li>

            }
            @if (Model.HasWifi == true)
            {
                <li><a><i class="fa fa-wifi"></i>  WiFi</a></li>

            }
            @if (Model.HasTv )
            {
                <li><a><i class="fa fa-tv"></i>  Plasma TV</a></li>

            }
            @if (Model.HasPhone )
            {
                <li><a><i class="fa fa-phone"></i>  Phone</a></li>

            }
            @if (Model.HasAirConditioner)
            {
                <li><a><i class="fa fa-fa fa-snowflake-o"></i>  Air conditioner</a></li>

            }
            @if (Model.HasHeater )
            {
                <li><a><i class="fa fa-thermometer-full"></i>  Heater</a></li>

            }
            <li><a class="btn btn-outline-dark" asp-area="" asp-controller="Room" asp-action="Reserve" asp-route-roomId="@Model.Id">Make your reservation now!</a></li>

            @if (User.IsInRole(GlobalConstants.AdministratorRoleName))
            {
                <li id="roomDetailsDeleteEditBtns">
                    <a class="btn btn-outline-warning" asp-area="" asp-controller="Room" asp-action="Edit" asp-route-roomId="@Model.Id">Edit</a>

                    <a class="btn btn-outline-danger" asp-area="" asp-controller="Room" asp-action="DeleteRoom" asp-route-roomId="@Model.Id">Delete</a>
                </li>
            }

        </ul>

        </div>
    </div>
</div>
